{
  "name": "@speakeasy-api/docs-md-components",
  "version": "0.2.36",
  "author": "Speakeasy",
  "license": "MIT",
  "description": "Web components used with Speakeasy's DocsMD product",
  "type": "module",
  "exports": {
    "./docusaurus.css": {
      "default": "./dist/docusaurus.css"
    },
    "./nextra.css": {
      "default": "./dist/nextra.css"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speakeasy-api/docs-md-public.git"
  },
  "homepage": "https://www.speakeasy.com/product/api-docs",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && cpx \"src/**/*.css\" dist/",
    "build:watch": "tsc --watch & cpx \"src/**/*.css\" dist/ --watch",
    "prettier": "prettier --config ../../prettier.config.mjs --ignore-path ../../.gitignore \"**/*.{js,jsx,mjs,ts,tsx,mts}\"",
    "format": "npm run prettier -- --write",
    "check-formatting": "npm run prettier -- --check",
    "lit-analyze": "lit-analyzer --strict --rules.no-unknown-tag-name error --rules.no-unknown-event error --rules.no-unknown-slot error --rules.no-unknown-attribute error \"src/**/*.{js,ts}\"",
    "lint": "eslint \"**/*.{js,jsx,mjs,ts,tsx,mts}\" && npm run lit-analyze",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@types/react": "^19.2.2",
    "cpx2": "^8.0.0",
    "globals": "^16.3.0",
    "lit-analyzer": "^2.0.3",
    "ts-lit-plugin": "^2.0.2",
    "typescript": "^5.8.3"
  }
}