{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./types",
    "module": "Node16",
    "moduleResolution": "node16",
    "rewriteRelativeImportExtensions": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // Unfortunately hono+zod has a compile error on newer versions of TypeScript,
    // so we have to disable checking/loosen checking on our usage of third party
    // dependencies
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true
  },
  "include": ["types/**/*"]
}