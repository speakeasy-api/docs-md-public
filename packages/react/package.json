{
  "name": "@speakeasy-api/docs-md-react",
  "version": "0.2.29",
  "author": "Speakeasy",
  "license": "MIT",
  "description": "React components used with Speakeasy's DocsMD product",
  "type": "module",
  "exports": {
    "./docusaurus.css": {
      "default": "./dist/docusaurus.css"
    },
    "./nextra.css": {
      "default": "./dist/nextra.css"
    },
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/speakeasy-api/docs-md-react.git"
  },
  "homepage": "https://www.speakeasy.com/product/api-docs",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc && cpx \"src/**/*.css\" dist/",
    "build:watch": "tsc --watch & cpx \"src/**/*.css\" dist/ --watch",
    "prettier": "prettier --config ../../prettier.config.mjs --ignore-path ../../.gitignore \"**/*.{js,jsx,mjs,ts,tsx,mts}\"",
    "format": "npm run prettier -- --write",
    "check-formatting": "npm run prettier -- --check",
    "lint": "eslint \"**/*.{js,jsx,mjs,ts,tsx,mts}\"",
    "storybook": "storybook dev -p 6006 --config-dir ./src/.storybook",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@speakeasy-api/docs-md-shared": "0.2.29",
    "clsx": "^2.1.1",
    "jotai": "^2.14.0",
    "monaco-editor": "^0.53.0",
    "react-use-measure": "^2.1.7"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@storybook/addon-a11y": "^9.0.12",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-vitest": "^9.0.12",
    "@storybook/react": "^9.0.12",
    "@storybook/react-vite": "^9.0.12",
    "@types/js-yaml": "^4.0.9",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.6",
    "cpx2": "^8.0.0",
    "globals": "^16.3.0",
    "react": "^19.1.0",
    "storybook": "^9.0.12",
    "typescript": "^5.8.3"
  }
}