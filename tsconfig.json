{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "module": "es2022",
    "moduleResolution": "bundler",
    "rewriteRelativeImportExtensions": true,
    "outDir": "./dist",
    "jsx": "react-jsx",

    // Unfortunately hono+zod has a compile error on newer versions of TypeScript,
    // so we have to disable checking/loosen checking on our usage of third party
    // dependencies
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}